<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: profile) do |f| %>
    <div class="card">
      <div class="card-body">
      
        <div class="mb-3">
          <%= f.label :name, 'Nome Completo', { class: "form-label"} %>
          <%= f.text_field :name, { class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :social_name, 'Nome Social', { class: "form-label"} %>
          <%= f.text_field :social_name, { class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :birth_date, 'Data de Nascimento', { class: "form-label"} %>
          <%= f.date_field :birth_date, { class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :formation, 'Formação', { class: "form-label"} %>
          <%= f.text_field :formation, { class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :description, 'Descrição', { class: "form-label"} %>
          <%= f.text_area :description, { class: "form-control"} %>
        </div>
        <div class="mb-3">
          <%= f.label :experience, 'Experiência', { class: "form-label"} %>
          <%= f.text_area :experience, { class: "form-control"} %>
        </div>

        <%= f.hidden_field :user_id %>

        <%= f.submit 'Salvar', class: "btn btn-default btn-primary" %>
      </div>
    </div>
  <% end %>
</div>