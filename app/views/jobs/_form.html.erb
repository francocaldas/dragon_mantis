<div class="col-md-6 col-md-offset-3">
  <%= form_with(model: job) do |f| %>
    <div class="card">
      <div class="card-body">

        <div class="mb-3">
          <%= f.label :title, 'Título', { class: "form-label"} %>
          <%= f.text_field :title, { class: "form-control" } %>
        </div>
        
        <div class="mb-3">
          <%= f.label :description, 'Descrição', { class: "form-label"} %>
          <%= f.text_area :description, { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.label :skills, 'Habilidades Desejadas', { class: "form-label"} %>
          <%= f.text_field :skills, { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.label :salary_range, 'Faixa Salarial', { class: "form-label"} %>
          <%= f.text_field :salary_range, { class: "form-control" } %>
        </div class="mb-3">

        <div class="mb-3">
          <%= f.label :level, 'Nível', { class: "form-label"} %>
          <%= f.text_field :level, { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.label :deadline, 'Data Limite', { class: "form-label"} %>
          <%= f.date_field :deadline, { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.label :location, 'Localização', { class: "form-label"} %>
          <%= f.text_field :location, { class: "form-control" } %>
        </div>

        <%= f.submit 'Salvar', class: "btn btn-default btn-primary" %>
      </div>
    </div>
  <% end %>
</div>