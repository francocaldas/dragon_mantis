<div class="container-fluid">
  <p class="h2">Vagas em destaque</p>
  <% @jobs.each do |job| %>
    <div class="card w-75">
      <div class="card-body">
        <h4 class="card-title">
          <%= job.title %>
        </h4>
        
        <div class="row">
          <label class="col-sm-2 col-label"><b>Descrição da Vaga:</b></label>
          <div class="col-sm-10">
            <%= truncate job.description, length: 100 %>
          </div>
        </div>

        <div class="row">
          <label class="col-sm-2 col-label"><b>Habilidades Desejadas:</b></label>
          <div class="col-sm-10">
            <%= job.skills %>
          </div>
        </div>

        <div class="row">
          <label class="col-sm-2 col-label"><b>Nível:</b></label>
          <div class="col-sm-10">
            <%= job.level %>
          </div>
        </div>
        
        <br>
        <%= link_to 'Visualizar', job, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
